{% extends 'base.html.twig' %}

{% block title %}Registro - NBA Project{% endblock %}

{% block body %}
    <style>
        /* Mismos estilos base que el Login */
        body { background-color: #212529 !important; }

        .auth-container {
            min-height: calc(100vh - 76px);
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)), url("{{ asset('images/fondo-nba.jpg') }}");
            background-size: cover;
            background-position: center;
            padding: 20px;
        }

        .auth-card {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.5);
            width: 100%;
            max-width: 450px;
        }

        .auth-title {
            color: #1d8a4e; /* Verde (distinto al login) */
            font-weight: 900;
            text-transform: uppercase;
            text-align: center;
            margin-bottom: 25px;
        }

        .btn-register {
            width: 100%;
            padding: 12px;
            background-color: #1d8a4e;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 8px;
            font-size: 1.1rem;
            margin-top: 15px;
        }
        .btn-register:hover { background-color: #146c3b; color: white; }

        /* Estilos para forzar el diseño de los campos de Symfony */
        .form-group { margin-bottom: 15px; }
        .form-control { border-radius: 8px; padding: 10px; }
        label { font-weight: bold; margin-bottom: 5px; color: #333; }
    </style>

    <div class="auth-container">
        <div class="auth-card">
            <div style="text-align: center; font-size: 3rem; margin-bottom: 10px;"></div>
            <h1 class="auth-title">Crear Cuenta</h1>

            {{ form_start(registrationForm) }}

            <div class="form-group">
                {{ form_row(registrationForm.email, {
                    'attr': {'class': 'form-control', 'placeholder': 'Introduce tu email'},
                    'label': 'Correo Electrónico'
                }) }}
            </div>

            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {
                    'attr': {'class': 'form-control', 'placeholder': 'Crea una contraseña'},
                    'label': 'Contraseña'
                }) }}
            </div>

            <div class="form-group mt-3">
                {{ form_row(registrationForm.agreeTerms, {
                    'label': 'Acepto los términos y condiciones'
                }) }}
            </div>

            <button type="submit" class="btn btn-register">REGISTRARSE</button>

            {{ form_end(registrationForm) }}

            <div class="mt-3 text-center">
                <small>¿Ya tienes cuenta? <a href="{{ path('app_login') }}" style="color: #1d8a4e; font-weight: bold;">Inicia sesión</a></small>
            </div>
        </div>
    </div>
{% endblock %}
