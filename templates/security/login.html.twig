{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - NBA Project{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #212529 !important;
        }

        .auth-container {
            min-height: calc(100vh - 76px);
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)), url("{{ asset('images/fondo-nba.jpg') }}");
            background-size: cover;
            background-position: center;
            padding: 20px;
        }

        .auth-card {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.5);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .auth-icon { font-size: 3rem; margin-bottom: 10px; display: block; }

        .auth-title {
            color: #1d428a;
            font-weight: 900;
            text-transform: uppercase;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
        }

        .btn-nba {
            width: 100%;
            padding: 12px;
            background-color: #cf5606;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 8px;
            font-size: 1.1rem;
            transition: background 0.3s;
            margin-top: 10px;
        }

        .btn-nba:hover { background-color: #a84200; color: white; }
    </style>

    <div class="auth-container">
        <form method="post" class="auth-card">
            <span class="auth-icon"></span>
            <h1 class="auth-title">Bienvenido</h1>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Has iniciado sesión como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Salir</a>
                </div>
            {% endif %}

            <input type="email" value="{{ last_username }}" name="email" class="form-control" placeholder="Correo electrónico" autocomplete="email" required autofocus>
            <input type="password" name="password" class="form-control" placeholder="Contraseña" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-nba" type="submit">ENTRAR</button>

            <div class="mt-3">
                <small>¿No tienes cuenta? <a href="{{ path('app_register') }}" style="color: #1d428a; font-weight: bold;">Regístrate</a></small>
            </div>
        </form>
    </div>
{% endblock %}
