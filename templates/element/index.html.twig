{% extends 'base.html.twig' %}

{% block title %}Element index{% endblock %}

{% block body %}
    <h1>Element index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Stats</th>
                <th>Description</th>
                <th>Number</th>
                <th>ApiId</th>
                <th>Name</th>
                <th>Team</th>
                <th>Position</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.id }}</td>
                <td>{{ element.stats }}</td>
                <td>{{ element.description }}</td>
                <td>{{ element.number }}</td>
                <td>{{ element.apiId }}</td>
                <td>{{ element.name }}</td>
                <td>{{ element.team }}</td>
                <td>{{ element.position }}</td>
                <td>{{ element.image }}</td>
                <td>
                    <a href="{{ path('app_element_show', {'id': element.id}) }}">show</a>
                    <a href="{{ path('app_element_edit', {'id': element.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_element_new') }}">Create new</a>
{% endblock %}
