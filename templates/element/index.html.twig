{% extends 'base.html.twig' %}

{% block title %}Jugadores NBA{% endblock %}

{% block body %}
    <style>
        /* --- ESTILOS GENERALES --- */
        .nba-list-bg {
            background-color: #f8f9fa;
            min-height: calc(100vh - 76px);
            padding: 40px 0;
        }

        .section-title {
            text-align: center;
            margin-bottom: 40px;
            color: #1d428a;
            font-weight: 900;
            text-transform: uppercase;
            font-size: 2.5rem;
            letter-spacing: 1px;
        }

        /* --- TARJETA DEL JUGADOR --- */
        .player-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            padding-bottom: 20px;
            border: 1px solid #eee;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .player-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
            border-color: #cf5606;
        }

        /* --- ZONA DE IMAGEN --- */
        .player-img-wrapper {
            height: 200px; /* Altura fija para uniformidad */
            width: 100%;
            background-color: #fff;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            padding: 10px;
        }

        .player-img-wrapper img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain; /* Ajusta la imagen sin recortarla */
        }

        .placeholder-icon {
            font-size: 4rem;
            color: #ccc;
        }

        /* --- INFO DEL JUGADOR --- */
        .player-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .player-name {
            font-weight: 800;
            font-size: 1.2rem;
            margin-bottom: 5px;
            color: #333;
            line-height: 1.2;
        }

        .player-team {
            color: #cf5606;
            font-weight: bold;
            font-size: 0.85rem;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        .player-position {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .btn-view {
            background-color: #1d428a;
            color: white;
            border-radius: 50px;
            padding: 8px 30px;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            transition: background 0.3s;
            font-size: 0.9rem;
            margin-top: auto; /* Empuja el bot√≥n al fondo */
        }

        .btn-view:hover {
            background-color: #143066;
            color: white;
        }

        /* --- BOT√ìN FLOTANTE (Desactivado temporalmente) --- */
        .btn-create-floating {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background-color: #cf5606;
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            text-decoration: none;
            transition: transform 0.2s;
            z-index: 1000;
        }
        .btn-create-floating:hover {
            transform: scale(1.1);
            color: white;
        }
    </style>

    <div class="nba-list-bg">
        <div class="container">
            <h1 class="section-title">Jugadores</h1>

            <div class="row">
                {% for element in elements %}
                    <div class="col-md-4 col-lg-3 mb-4">
                        <div class="player-card">

                            <div class="player-img-wrapper">
                                {% if element.image %}
                                    {% if element.image starts with 'http' %}
                                        <img src="{{ element.image }}" alt="{{ element.name }}">
                                    {% else %}
                                        <img src="{{ asset('uploads/images/' ~ element.image) }}" alt="{{ element.name }}">
                                    {% endif %}
                                {% else %}
                                    <div class="placeholder-icon">üèÄ</div>
                                {% endif %}
                            </div>

                            <div class="player-info">
                                <div>
                                    <div class="player-name">{{ element.name }}</div>

                                    {% if element.team is defined %}
                                        <div class="player-team">{{ element.team }}</div>
                                    {% endif %}

                                    {% if element.position is defined %}
                                        <div class="player-position">{{ element.position }}</div>
                                    {% endif %}
                                </div>

                                <a href="{{ path('app_element_show', {'id': element.id}) }}" class="btn-view">
                                    VER FICHA
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <div class="alert alert-warning p-5">
                            <h4>No hay jugadores en la base de datos</h4>
                            <p>¬°S√© el primero en a√±adir una estrella!</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
