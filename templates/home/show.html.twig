{% extends 'base.html.twig' %}

{% block title %}{{ element.name }} - NBA DB{% endblock %}

{% block body %}
    <div class="container mt-5" style="margin-bottom: 50px;">

        <a href="{{ path('app_player_list') }}" class="btn btn-outline-secondary mb-4">
            &larr; Volver al Roster
        </a>

        <div class="row">
            <div class="col-md-5">
                <div class="card shadow-lg border-0" style="overflow: hidden;">

                    {% if element.image %}
                        <img src="{{ element.image }}" alt="{{ element.name }}" class="card-img-top" style="max-height: 500px; object-fit: cover;">
                    {% else %}
                        <div style="height: 400px; background-color: #eee; display: flex; align-items: center; justify-content: center; font-size: 8rem;">
                            üèÄ
                        </div>
                    {% endif %}

                    <div class="card-body text-center text-white" style="background-color: #cf5606;">
                        <h2 class="m-0 fw-bold">#{{ element.number }}</h2>
                        <span class="badge bg-white text-dark mt-2">{{ element.position }}</span>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <h1 class="display-4 fw-bold">{{ element.name }}</h1>
                <h3 class="text-muted mb-4">{{ element.team }}</h3>

                <div class="p-4 bg-light rounded shadow-sm mb-4" style="border-left: 5px solid #cf5606;">
                    <h5 style="color: #cf5606; font-weight: bold;">Estad√≠sticas de Temporada</h5>
                    <p class="lead font-weight-bold mb-0">{{ element.stats }}</p>
                </div>

                <div class="card">
                    <div class="card-header bg-white fw-bold">
                        Biograf√≠a / Scouting Report
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ element.description|default('No hay descripci√≥n disponible para este jugador.')|nl2br }}</p>
                    </div>
                </div>

                {% if element.apiId %}
                    <div class="mt-3 text-end">
                        <small class="text-muted">ID Referencia API: {{ element.apiId }}</small>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
